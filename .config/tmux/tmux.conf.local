# -- user customizations -------------------------------------------------------
# this is the place to override or undo settings

set -g history-limit 10000
set -g mouse on
set -s escape-time 1

# force Vi mode
#   really you should export VISUAL or EDITOR environment variable, see manual
#set -g status-keys vi
#set -g mode-keys vi

# replace C-b by C-a instead of using both prefixes
set -gu prefix2
unbind p
unbind C-a
unbind C-c # disable create new session
unbind C-b
unbind -
unbind _
set -g prefix C-a
bind C-a send-prefix
# Enable vi keys
setw -g mode-keys vi
set-option -g default-shell /bin/zsh


# bind Escape copy-mode¬†
#bind vi-copy 'v' begin-selection¬†

#Linux copy to clipboard
#bind -t vi-copy 'y' copy-pipe "xclip -sel clip -i"
#Mac copy to clipboard # TODO: fix this to be agnostic, implementation available in tmux 2 book
#bind -t vi-copy y copy-pipe "reattach-to-user-namespace pbcopy"

#bind p paste-buffer
# Rebind split to nvim commands
unbind -T prefix s
unbind -T prefix v
bind-key -T prefix s split-window -v -c "#{pane_current_path}"
bind-key -T prefix v split-window -h -c "#{pane_current_path}"


# -- tpm -----------------------------------------------------------------------

tmux_conf_update_plugins_on_launch=true
tmux_conf_update_plugins_on_reload=true
tmux_conf_uninstall_plugins_on_reload=true

