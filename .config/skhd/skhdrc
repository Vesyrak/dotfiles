# change window focus within space
meh - j : yabai -m window --focus south
meh - k : yabai -m window --focus north
meh - l : yabai -m window --focus west
meh - h : yabai -m window --focus east

#change focus between external displays (left and right)
hyper - q: yabai -m display --focus west
hyper - e: yabai -m display --focus east

# toggle window float
hyper - : yabai -m window --toggle float --grid 4:4:1:1:2:2

# maximize a window
hyper - f : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
hyper - e : yabai -m space --balance

# move window and split
hyper - j : yabai -m window --warp south
hyper - k : yabai -m window --warp north
hyper - l : yabai -m window --warp west
hyper - h : yabai -m window --warp east

# move window to display left and right
hyper - v : yabai -m window --display west; yabai -m display --focus west;
hyper - m : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
hyper - b : yabai -m window --space prev;
hyper - n : yabai -m window --space next;

# move window to space #
meh - 1 : yabai -m window --space 1;
meh - 2 : yabai -m window --space 2;
meh - 3 : yabai -m window --space 3;
meh - 4 : yabai -m window --space 4;
meh - 5 : yabai -m window --space 5;
meh - 6 : yabai -m window --space 6;
meh - 7 : yabai -m window --space 7;
meh - 8 : yabai -m window --space 8;
meh - 9 : yabai -m window --space 9;
